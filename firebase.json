{
   "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/referral",
        "destination": "/referral.html"
      },
      {
        "source": "/referral/**",
        "destination": "/referral.html"
      }
    ]
  }
}
